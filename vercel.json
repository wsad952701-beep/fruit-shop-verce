{
    "version": 2,
    "public": true,
    "rewrites": [
        {
            "source": "/",
            "destination": "/public/frontend/index.html"
        },
        {
            "source": "/frontend",
            "destination": "/public/frontend/index.html"
        },
        {
            "source": "/frontend/",
            "destination": "/public/frontend/index.html"
        },
        {
            "source": "/frontend/:path*",
            "destination": "/public/frontend/:path*"
        },
        {
            "source": "/admin",
            "destination": "/public/admin/dashboard.html"
        },
        {
            "source": "/admin/",
            "destination": "/public/admin/dashboard.html"
        },
        {
            "source": "/admin/:path*",
            "destination": "/public/admin/:path*"
        },
        {
            "source": "/images/:path*",
            "destination": "/public/frontend/images/:path*"
        }
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET,POST,PUT,DELETE,OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "Content-Type, Authorization"
                }
            ]
        }
    ],
    "functions": {
        "api/**/*.js": {
            "maxDuration": 10
        }
    }
}